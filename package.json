{
  "name": "ingester",
  "version": "0.1.0",
  "author": "ariym",
  "description": "Server and CLI for tagging and processing media files.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "tsx --env-file=.env --watch src/index.ts",
    "build": "pkgroll index.ts ",
    "prod": "npm run build && node --env-file=.env dist/index.js",
    "init:db": "mkdir data && touch data/mydb.sqlite",
    "reset:db": "rm -r data && npm run init:db",
    "setup": "npm install && npm run init:db  && npm run dev",
    "test": "tsx --env-file=.env test/runner.ts"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.10.2",
    "@types/sqlite3": "^3.1.11",
    "pkgroll": "^2.6.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "better-sqlite3": "^12.2.0",
    "bullmq": "^5.56.9",
    "sqlite": "^5.1.1"
  }
}
