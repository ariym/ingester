{
  "name": "ingester",
  "version": "0.1.0",
  "author": "ariym",
  "description": "Server and CLI for tagging and processing media files.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "tsx --watch --env-file=.env src/index.ts",
    "build": "pkgroll --env-file=.env index.ts",
    "prod": "npm run build && node dist/index.js",
    "setup": "npm install && mkdir data && npm run dev"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.10.2",
    "@types/sqlite3": "^3.1.11",
    "pkgroll": "^2.6.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "video-extensions": "^2.0.0"
  }
}
